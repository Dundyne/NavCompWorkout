<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeFragment">


    <TextView
        android:id="@+id/txtCalculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="240dp"
        android:text="@string/tdee_calculator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageBtnCalculator" />

    <TextView
        android:id="@+id/txtGraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="240dp"
        android:text="@string/graph_summary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtCalculator"
        app:layout_constraintTop_toBottomOf="@+id/imageBtnGraph" />

    <ImageButton
        android:id="@+id/imageBtnCalculator"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:layout_width="82dp"
        android:layout_height="80dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/roundedbutton"
        android:contentDescription="@string/imagecalculator"
        android:src="@mipmap/forside_kalkulator_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageBtnGraph"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:layout_width="82dp"
        android:layout_height="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/roundedbutton"
        android:contentDescription="@string/imagegraph"
        android:src="@mipmap/forside_graf_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageBtnCalculator"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageBtnLogin"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:layout_width="82dp"
        android:layout_height="80dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/roundedbutton"
        android:contentDescription="@string/imagelogin"
        android:src="@mipmap/forside_loginknapp_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageBtnYoutube"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageBtnYoutube"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:layout_width="82dp"
        android:layout_height="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/roundedbutton"
        android:contentDescription="@string/imageyoutube"
        android:src="@mipmap/forside_youtubeknapp_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageBtnGraph"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginTop="140dp"
        android:contentDescription="@string/imageexercise"
        android:text="@string/start_trening"
        app:icon="@drawable/ic_baseline_add_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.46" />

    <TextView
        android:id="@+id/txtLoggInn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="240dp"
        android:text="@string/log_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtMotivation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageBtnLogin"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtMotivation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="240dp"
        android:text="@string/get_fit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtGraph"
        app:layout_constraintTop_toBottomOf="@+id/imageBtnYoutube" />


</androidx.constraintlayout.widget.ConstraintLayout>